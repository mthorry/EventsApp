        <%= f.label :password %>
        <%= f.password_field :password, class: "login-type" %><br>

        <%= f.submit "Log In", class: "btn btn-primary btn-lg" %>
        Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
  <% end %>
  </div>
</div>
</div>

