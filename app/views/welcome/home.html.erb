<% if !current_user %>
<h1>Welcome! Log in below:</h1>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.submit "log in" %><br>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
<% else %>
Hey <%= current_user.first_name %>!
<%= link_to "Create New Event", new_event_path %>

<% end %>
