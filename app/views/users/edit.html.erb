<div class="container">

<div class="col-md-6 col-md-offset-4">

  <div class="user-form">
<h1>Edit User Form</h1>
<%= form_for @user do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :bio %>
  <%= f.text_area :bio %><br>

  <%= f.label :location %>
  <%= f.collection_select(:location_id, Location.all, :id, :name, prompt: true) %><br>

  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>