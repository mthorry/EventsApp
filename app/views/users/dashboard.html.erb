Hey <%= @user.first_name %>!
<% if @user == current_user %>
<p>You’re logged in!</p>
<%= link_to "Create New Event", new_event_path %>

<h2>Followers</h2>
<ol>
  <% Friendship.where(friend_id: current_user.id).each do |friend| %>
  <li><%=link_to "#{User.find_by_id(friend.user_id).first_name}" %></li>
  <% end %>
</ol>

<h2>Following</h2>
<ol>
  <% @user.friends.each do |friend| %>
  <li><%=link_to "#{friend.first_name} #{friend.last_name}", user_path(friend)%></li>
  <% end %>
</ol>

<h2>Recommended Events</h2>
<ol>
  <% @user.friends.each do |friend| %>
  <%  if friend.events.count > 0%>
  <li><%=link_to "#{friend.events.first.name}"%></li>
  <% end %>
  <% end %>
</ol>


<%else %>
<p>You’re not logged in!</p>
<%end %>

