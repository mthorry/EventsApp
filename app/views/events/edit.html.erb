<div class="container">
<h1>Edit Event</h1>
<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :location %>
  <%= f.collection_select(:location_id, Location.all, :id, :name, prompt: true) %><br>

 <%= f.label :date_time %>
  <%= select_datetime Date.today, :prefix => :date_time %><br>

  <%= f.submit "update" %>
<% end %>
</div>