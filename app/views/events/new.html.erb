<div class="col-md-6 col-md-offset-4">

  <div class="user-form">
<h1>Create New Event</h1>
<%= form_for @event, controller: 'events', action: 'create' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :location %>
  <%= f.collection_select(:location_id, Location.all, :id, :name, prompt: true) %><br>

  <%= f.label :category %>
  <%= f.collection_select(:category_ids, Category.all, :id, :name, prompt: true) %><br>

 <%= f.label :date_time %>
  <%= select_datetime Date.today, :prefix => :date_time %><br>

  <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>
</div>
</div>